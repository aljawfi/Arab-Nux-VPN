<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf0f1"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="ArabNux"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/net_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="ArabNux"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="ArabNux"
                    android:textSize="18sp" />

                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/copyRightMain"
                    />

                <android.support.v7.widget.CardView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_username"
                        android:ems="10"
                        android:hint="@string/username_rlt"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:textSize="@dimen/edit_text_size"
                        android:padding="@dimen/edit_text_padding"
                        android:drawableLeft="@drawable/ic_username" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/psw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/Password"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:drawableLeft="@drawable/ic_password"
                            android:drawablePadding="8dp"
                            android:drawableStart="@drawable/ic_password"
                            android:ems="10"
                            android:gravity="right"
                            android:hint="@string/password__rlt"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:padding="@dimen/edit_text_padding"
                            android:textSize="@dimen/edit_text_size" />

                        <ImageButton
                            android:id="@+id/show_hide_pass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:background="#00000000"
                            android:src="@drawable/ic_visibility_black_24dp" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/startVpn"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/edit_text_padding"
                    android:text="@string/connect"
                    android:textAppearance="@style/Theme.AppCompat"
                    android:textColor="#fff"
                    android:textSize="@dimen/edit_text_size"
                    android:background="@drawable/btn_connect"
                    />





            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/rempsw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_right_checkbox"
                    android:layout_marginStart="@dimen/margin_right_checkbox"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/save_psw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/save_psw" />
                </LinearLayout>


                <LinearLayout
                    android:layout_marginLeft="@dimen/margin_right_checkbox"
                    android:layout_marginStart="@dimen/margin_right_checkbox"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_marginRight="@dimen/margin_right_checkbox"
                        android:textColor="#808080"
                        android:text="@string/connect_auto"
                        android:checked="true"
                        android:id="@+id/auto_connect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_right_checkbox"
                        android:layout_marginLeft="@dimen/margin_right_checkbox" />

                </LinearLayout>


            </LinearLayout>


            <!--connect paramtries
           -->
            <android.support.v7.widget.CardView
                android:layout_margin="10dp"
                app:cardElevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="10dp"
                    android:background="#d4dbe0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TableRow
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/statu_connection"
                            android:textColor="#f20000"
                            />

                        <TextView
                            android:id="@+id/statu_con"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/offline"
                            android:textColor="#F70044"
                            />
                    </TableRow>

                    <TableRow
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ip_adress"
                            android:textColor="#f20000"
                            />

                        <TextView
                            android:id="@+id/ip_adress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_0_0_0_0"
                            android:textColor="#3a556a"
                            android:textSize="18sp" />
                    </TableRow>



                    <TableRow
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/data"
                            android:textColor="#f20000"
                            />
                        <TextView
                            android:id="@+id/data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_0kb_s_0kb_0kb_s_0kb"
                            android:textColor="#3a556a"
                            />
                    </TableRow>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
